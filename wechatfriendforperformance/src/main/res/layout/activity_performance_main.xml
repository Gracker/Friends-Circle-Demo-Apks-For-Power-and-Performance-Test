<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_F2F2F2"
    tools:context=".PerformanceMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_main"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/base_333333"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp" />
            
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_select_load"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/base_333333"
                    android:layout_marginBottom="16dp" />
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_light_load"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_light_load"
                    android:textSize="16sp"
                    android:backgroundTint="@color/primary_blue"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="12dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_medium_load"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_medium_load"
                    android:textSize="16sp"
                    android:backgroundTint="@color/accent_teal"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="12dp" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_heavy_load"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_heavy_load"
                    android:textSize="16sp"
                    android:backgroundTint="@color/deep_purple"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应用介绍"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/base_333333"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="14sp"
                    android:textColor="@color/base_666666"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2025 朋友圈性能测试应用"
            android:textColor="@color/base_999999"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView> 